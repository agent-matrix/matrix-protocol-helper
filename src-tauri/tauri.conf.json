{
  "$schema": "https://schema.tauri.app/config/v2",
  "identifier": "io.matrixhub.clihelper",
  "productName": "Matrix Protocol Helper",
  "version": "0.1.0",
  "build": {
    "beforeDevCommand": "",
    "beforeBuildCommand": "",
    "frontendDist": "../src"
  },
  "app": {
    "security": {
      "csp": null
    },
    "windows": [
      {
        "label": "main",
        "title": "Matrix Protocol Helper",
        "visible": false,
        "resizable": false,
        "fullscreen": false,
        "width": 1,
        "height": 1,
        "decorations": false
      },
      {
        "label": "progress",
        "title": "Matrix Installer",
        "url": "/index.html",
        "visible": false,
        "resizable": true,
        "width": 720,
        "height": 420
      }
    ]
  },
  "bundle": {
    "active": true,
    "targets": [
      "msi",
      "dmg",
      "app",
      "appimage",
      "deb",
      "rpm"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/icon.ico",
      "icons/icon.png"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": [
          "matrix"
        ]
      }
    }
  }
}
